
<div class="row">
  <div class="col-md-8 offset-md-2">
  <p id="notice"><%= notice %></p>
  <h1><%= MiningType.model_name.human(count: @mining_types.count) %></h1>

  <%= link_to t('new.mining_type'), new_mining_type_path, class:"btn btn-primary float-right mb-2" %>
    <table class="table table-hover table-bordered">
      <thead class="thead-dark">
        <tr>
          <th style="width: 65%;"><%= @mining_types.human_attribute_name(:description) %></th>
          <th style="width: 10%; text-align:center;"><%= @mining_types.human_attribute_name(:acronym) %></th>
          <th style="width: 25%; text-align:center;"><%= t('tables.options') %></th>
        </tr>
      </thead>

      <tbody>
        <% @mining_types.each do |mining_type| %>
          <tr>
            <td><%= mining_type.description %></td>
            <td style="text-align:center"><%= mining_type.acronym %></td>
            <td style="text-align:center"><%= link_to t('links.show'), mining_type, class:"btn btn-success btn-sm" %> <%= link_to t('links.edit'), edit_mining_type_path(mining_type), class:"btn btn-info btn-sm" %> <%= link_to t('links.delete'), mining_type, class:"btn btn-danger btn-sm", method: :delete, data: { confirm: t('messages.del_confirm') } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


